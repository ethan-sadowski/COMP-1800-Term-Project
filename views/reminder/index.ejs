<div class="container">
  <h1 class="page-header">Reminders</h1>
</div>
<div class="container" style="border-radius: 25pt;">
  <ul class="list-group">
    <!-- For each reminder -->
    <% reminders.forEach(function (reminderItem) { %>
    <li class="list-group-item" style="border-radius: 14pt;">
    <div class="row">
        <!-- First Column -->
        <div class="col">

        <h5><strong><%= reminderItem.title %> </strong></h5>
        <%= reminderItem.description %>
        <br>
        <strong>Date:</strong>
        <%= reminderItem.date %>
        <br>
        <br>
        <h6><strong>Subtasks:</strong></h6>
        <div class="container">
          <ul class="list-group">
            <% reminderItem.subtasks.forEach(function(item) { %>
              <% if (item != "") { %>
                <li><%= item %></li>
              <% } %>
            <%}); %>    
            </ul>
        </div> 
    
        <br>
        <strong>Completed:</strong>
        <% if (reminderItem.completed == true) { %>
          <span class="label label-success">Yes ✅</span>
        <% } else if (reminderItem.completed == false) { %>
          <span class="label label-danger">No ❌</span>
        <% } %>
        <br>
        <a class="pull-right" href=<%= "/reminder/" + reminderItem.id %>>View</a>
      </div>
      <!-- Second Column -->
      <div class="col" style="text-align: right;">
        <div>
          <% reminderItem.tags.forEach(function(item) { %>
            <% if (item != '' && item != undefined) { %>
              <button type="button" class="btn btn-sm btn-info">
                <%= item %>
                <span aria-hidden="true">&times;</span>
              </button>
            
            <% } %>
            <%}); %>
        </div>

      </div>

    </div>
      
    </li>
    <!-- Create space between -->
    <hr class="featurette-divider">
    <% }) %>
  </ul>

</div>

