    <script>
      window.sr = ScrollReveal();
      sr.reveal('.welcome', {
        duration: 2000,
        origin:'top'
      });
      sr.reveal('.welcome2', {
        duration: 4000,
        origin:'top',
      });
      sr.reveal('.info', {
        duration: 2000,
        origin:'left',
        distance:'300px',
        viewFactor: 0.4
      });
      sr.reveal('.photo', {
        duration: 2000,
        origin:'right',
        distance:'300px',
        viewFactor: 0.4
      });
      sr.reveal('.joinnow', {
        duration: 2000,
        origin:'bottom',
        distance:'300px',
        viewFactor: 0.2
      });
      sr.reveal('.team', {
        duration: 2000,
        origin:'left',
        distance:'300px',
        viewFactor: 0.2
      });
      sr.reveal('.teamnames', {
        duration: 2000,
        origin:'right',
        distance:'300px',
        viewFactor: 0.2
      });
  </script>

